<style>
  footer {
    background-color: {{ section.settings.footer-bg-color }};
    padding-top: {{ section.settings.footer-padding-top }}px;
    padding-bottom: {{ section.settings.footer-padding-bottom }}px;
    color: {{ section.settings.text-color }};
  }

  .footer-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-logo {
    width: 135px;
    margin-bottom: 20px;
  }

  .footer-description {
    font-size: 18px;
    color: {{ section.settings.text-color }};
    max-width: 290px;
  }

  .footer-social-container {
    display: flex;
    gap: 6px;
  }

  .footer__list-social {
    display: flex;
    gap: 6px;
    height: 38px;
    list-style: none;
    padding: 0;
  }

  .footer-social-icon {
    height: 38px;
    width: 38px;
    background-color: white;
    border-radius: 8px;
  }

  .footer-top-part {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: {{ section.settings.section-gap }}px;
    margin-bottom: 60px;
  }

  .footer-menu-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: {{ section.settings.section-gap }}px;
  }

  .footer-menu-list h4,
  .footer-contact-info h2,
  .footer-contact-info h4,
  .footer-contact-info p,
  .footer-bottom-part p {
    color: {{ section.settings.text-color }};
  }

  .footer-menu-list h4,
  .footer-contact-info h4 {
    font-size: {{ section.settings.heading-font-size }}px;
    font-weight: {{ section.settings.heading-font-weight }};
    margin-bottom: 16px;
  }

  .footer-menu-list ul {
    padding: 0;
  }

  .footer-menu-list ul li {
    list-style-type: none;
    margin-bottom: 4px;
  }

  .footer-menu-list ul li a {
    color: {{ section.settings.link-color }};
    position: relative;
    text-decoration: none;
    display: inline-block;
    transition: color 0.3s ease;
  }

  .footer-menu-list ul li a:hover {
    color: {{ section.settings.link-hover-color }};
  }

  {% if section.settings.link-underline %}
  .footer-menu-list ul li a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0;
    height: 1px;
    background-color: {{ section.settings.link-hover-color }};
    transition: width 0.5s ease;
  }

  .footer-menu-list ul li a:hover::after {
    width: 100%;
  }
  {% endif %}

  .footer-contact-info h2 {
    font-size: {{ section.settings.contact-font-size }}px;
    font-weight: {{ section.settings.contact-font-weight }};
    line-height: 28px;
  }

  .footer-contact-info p {
    font-size: {{ section.settings.contact-font-size }}px;
    font-weight: {{ section.settings.contact-font-weight }};
  }

  .footer-bottom-part {
    display: flex;
    justify-content: space-between;
    border-top: 1px solid #010f1c1a;
    padding-top: 40px;
  }

  .payment-icons svg {
    width: 50px;
    margin-right: 10px;
  }

  @media screen and (min-width: 768px) {
    .footer-top-part {
      flex-direction: row;
    }

    .footer-menu-container {
      flex-direction: row;
    }
  }
</style>

<footer>
  <div class="footer-container">
    <div class="footer-top-part">
      <div>
        <img src="{{ section.settings.logo | img_url: '120x' }}" height="100" width="100" class="footer-logo" loading="lazy">
        <p class="footer-description">{{ section.settings.footer-description }}</p>
        <div class="footer-social-container">
          {% render 'social-icons', class: 'footer__list-social' %}
        </div>
      </div>

      <div class="footer-menu-container">
        <div class="footer-menu-list">
          <h4>{{ section.settings.menu-header-1 }}</h4>
          <ul>
            {% assign product_links = linklists[section.settings.product_links] %}
            {% if product_links.links.size > 0 %}
              {% for link in product_links.links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            {% endif %}
          </ul>
        </div>

        <div class="footer-menu-list">
          <h4>{{ section.settings.menu-header-2 }}</h4>
          <ul>
            {% assign info_links = linklists[section.settings.info_links] %}
            {% if info_links.links.size > 0 %}
              {% for link in info_links.links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            {% endif %}
          </ul>
        </div>
      </div>

      <div class="footer-contact-info">
        <h4>{{ section.settings.contact-column-header }}</h4>
        <p>{{ section.settings.contact-column-subheading }}</p>
        <h2>{{ section.settings.contact-info-1 }}</h2>
        <p>{{ section.settings.contact-info-2 }}</p>
        <p>{{ section.settings.contact-info-3 }}</p>
      </div>
    </div>

    <div class="footer-bottom-part">
      <div>
        <p>{{ section.settings.footer-bottom-text }}</p>
      </div>

      {% if shop.enabled_payment_types.size > 0 %}
        <div class="payment-icons">
          {{ payment_types | payment_type_svg_tag }}
        </div>
      {% else %}
        <img src="{{ section.settings.payments-logo | img_url: '150x' }}" class="footer-payments-logo" loading="lazy">
      {% endif %}
    </div>
  </div>
</footer>

